<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MacroeconomicResearch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Hint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTagsTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="hintTextAppearance">@style/Hint</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Widget.Macro.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionNext|flagNoFullscreen</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="OtoChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipIconVisible">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
    </style>


    <style name="OtoDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnim</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Dialog</item>
        <item name="android:windowBackground">@color/google_scrim</item>
    </style>


    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>


    <style name="ShapeAppearanceOverlay.Dialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextAppearance.Macro.Subhead2" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/product_sans_medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>

    <style name="TextAppearance.Material.Headline6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/product_sans_medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>


    <style name="MD_Dialog_Title_Text">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.Material.Headline6</item>
    </style>


    <declare-styleable name="DialogButtonsLayout">
        <attr name="android:positiveButtonText" />
        <attr name="android:negativeButtonText" />
    </declare-styleable>
</resources>