<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="LoginFragmentBinding"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.macroeconomicresearch.view.TypeWriterTextView
        android:id="@+id/title"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:textAppearance="?textAppearanceHeadline4"
        android:fontFamily="@font/product_sans_medium"
        android:textColor="?android:textColorPrimary"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mr"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="wrap_content"
        android:text="Macroeconomic Researcher"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_mr"
        android:id="@+id/btn_go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:text="Government Official"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton

        android:id="@+id/btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_go" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>